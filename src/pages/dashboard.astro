---
import Layout from '../layouts/Layout.astro';
import DashboardReact from '../components/Dashboard';
---

<Layout title="Dashboard">
  <main class="p-6">
    <h1 class="text-4xl font-semibold text-gray-800 mb-6">Bienvenido al Dashboard</h1>

    <a href="/crear-proyecto" class="inline-block bg-blue-600 text-white py-2 px-6 rounded-lg shadow-md hover:bg-blue-700 hover:shadow-lg transition duration-300 mb-6">
      Crear nuevo proyecto
    </a>

    <DashboardReact client:load />
  </main>
</Layout>
